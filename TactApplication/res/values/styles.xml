<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TactTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
        <item name="android:actionBarStyle">@style/TactTheme.TactActionBar</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:editTextStyle">@style/TactEditTextStyle</item>
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
    </style>

    <style name="TactTheme.NoActionBar"  parent="TactTheme">
        <item name="android:actionBarStyle">@android:style/Theme.Holo.NoActionBar</item>
    </style>

    <!-- ToggleButton style -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/tact_toggle_layer</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="CustomDialogThemeTrasparent" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/on_boarding_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Styles for EditTexts -->
    <style name="TactEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="DefaultEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TactTheme.TranslucentActionBar" parent="TactTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TactTheme.TactActionBar.Translucent</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="TactTheme.TactActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/tact_actionbar_background</item>
        <item name="android:textColor">@color/tact_actionbar_text</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="TactTheme.TactActionBar.Translucent" parent="TactTheme.TactActionBar">
        <item name="android:background">@color/tact_actionbar_background_translucent</item>
    </style>


    <!-- Widget Styles -->
    <style name="ResetPasswordDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ContactsFilterButton">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>



    <style name="NavigationDrawerMenuItem">
        <item name="android:textColor">@color/navigation_drawer_button_text</item>
        <item name="android:textSize">@dimen/navigation_drawer_menu_item_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/navigation_drawer_menu_item_background_inactive
        </item>
    </style>

    <style name="TactDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="TactDialogFromBottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/TactDialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:theme">@android:style/Theme.Holo.Light</item>
    </style>

    <style name="TactDialogFullWidth" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <!-- ACTION BAR -->
    <style name="action_bar">
        <item name="android:background">@color/action_bar_grey</item>
    </style>

    <!-- Tact Button -->
    <style name="base_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/buton_padding</item>
        <item name="android:paddingTop">@dimen/buton_padding</item>
        <item name="android:paddingRight">@dimen/buton_padding</item>
        <item name="android:paddingLeft">@dimen/buton_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor" >#ffffff</item>
    </style>

    <!-- Orange Button -->
    <style name="orange_btn" parent="base_btn">
        <item name="android:background">@drawable/orange_tact_button</item>
    </style>

    !-- Grey Button -->
    <style name="grey_btn" parent="base_btn">
        <item name="android:background">@drawable/grey_tact_button</item>
    </style>

    <style name="green_btn" parent="base_btn">
        <item name="android:background">@drawable/green_tact_button</item>
        <item name="android:textColor" >@color/text_grey</item>
    </style>

    <!-- Red Button -->
    <style name="red_btn" parent="base_btn">
        <item name="android:background">@drawable/red_tact_button</item>
    </style>


    <style name="green_pwd_btn" parent="base_btn">
        <item name="android:background">@drawable/green_pwd_tact_button</item>
    </style>

    <!-- Grey White Button -->
    <style name="grey_white_btn" parent="base_btn">
        <item name="android:textColor">@drawable/grey_white_tact_button</item>
        <item name="android:background">@drawable/grey_white_tact_button</item>
    </style>

    <!-- Blue Button -->
    <style name="blue_btn" parent="base_btn">
        <item name="android:background">@drawable/blue_tact_button</item>
    </style>

    <!-- SETTINGS -->
    <style name="items_block">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="items_block_item">
        <item name="android:background">@color/white</item>
    </style>

    <style name="items_block_item.end" parent="items_block_item">
        <item name="android:background">@null</item>
    </style>

    <style name="contact_icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/mid_grey</item>
    </style>

    <style name="email_ellipsize">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="TextViewWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewWhiteSmall" parent="TextViewWhite">
        <item name="android:textSize">@dimen/l_text_size</item>
    </style>

    <style name="TextViewWhiteMedium" parent="TextViewWhite">
        <item name="android:textSize">@dimen/xl_text_size</item>
    </style>

    <style name="tact_pin_logo_style">
        <item name="android:src">@drawable/tact_logo</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="drawer_list_item">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/action_bar_dark_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
    </style>

    <style name="drawer_clickable_item" parent="drawer_list_item">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/drawer_menu_selector</item>
    </style>

    <style name="drawer_icons">
        <item name = "android:layout_gravity">center_vertical</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_width">20dp</item>
        <item name = "android:paddingBottom">2dp</item>
        <item name = "android:layout_height">20dp</item>
    </style>
    
    <style name="option_menu_items" parent="drawer_list_item">
        <item name="android:background">@drawable/drawer_menu_selector</item>
        <item name="android:padding">@dimen/option_menu_item_padding</item>
        <item name="android:textSize">@dimen/l_text_size</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="option_menu_style">
        <item name="android:background">@drawable/box_shadow</item>
    </style>

    <!-- CALENDAR ARROWS -->
    <style name="calendar_arrow_style">
        <item name="android:padding">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="calendar_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:textColor">@color/grey_mid</item>
    </style>

    <style name="event_box_style">
        <item name="android:padding">@dimen/padding_standard</item>
    </style>

    <!-- Log styles -->
    <style name="log_big_action_bar">
        <item name="android:background">@color/tact_light_blue</item>
    </style>

    <!-- Task styles -->
    <style name="task_action_bar">
        <item name="android:background">@color/action_bar_orange</item>
    </style>

    <style name="log_edit_text_item">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="task_edit_text_item">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="task_edit_text_item_title">
        <item name="android:textColor">@color/mid_grey</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/l_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="log_text_required" parent="log_edit_text_item">
        <item name="android:textColor">@color/tact_light_red</item>
        <item name="android:textSize">@dimen/l_text_size</item>
    </style>

    <style name="log_layout_field">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/drawer_menu_selector</item>
    </style>

    <style name="notebook_layout_field" parent="log_layout_field">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="log_details_layout_field">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="log_subject_menu_text">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawer_menu_selector</item>
    </style>

    <!-- Meeting styles -->
    <style name="meeting_header_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TextTab Style -->
    <style name="text_tab_menu">
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tab_text_aesthetic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:state_selected">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="tact_orange_button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/action_bar_orange</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="tact_red_button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/standard_red</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="tact_grey_button" parent="tact_orange_button">
        <item name="android:background">@color/text_grey_disable</item>
        <item name="android:textColor">@color/action_bar_dark_grey</item>
    </style>
    
    <style name="standard_button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/xl_text_size</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

</resources>
