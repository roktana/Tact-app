<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#D24638"
                android:endColor="#D6584C"
                android:angle="270"/>
        </shape>

    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#E8A29C" />
        </shape>
    </item>

    <!-- DEFAULT STATE -->
    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:startColor="#D6584C"
                android:endColor="#D24638"
                android:angle="270"/>
        </shape>
    </item>

</selector>