<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" android:color="@color/text_grey">
    <shape>
        <corners android:radius="10dp" />
        <gradient
            android:startColor="#E1E1DF"
            android:endColor="@color/btn_white_gray"
            android:angle="270"/>
    </shape>

</item>

<item android:state_enabled="false" android:color="@color/text_grey_disable">
    <shape>
        <corners android:radius="10dp" />
        <solid android:color="@color/btn_white_gray_disable" />
    </shape>
</item>

<!-- DEFAULT STATE -->
<item android:color="@color/text_grey">
    <shape>
        <corners android:radius="10dp" />
        <gradient
            android:startColor="@color/btn_white_gray"
            android:endColor="#E1E1DF"
            android:angle="270"/>
    </shape>
</item>

</selector>