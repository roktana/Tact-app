<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_weight="10"
    android:id="@+id/entire_actionBar_layout">

        <LinearLayout
            android:id="@+id/actionBar_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <LinearLayout
                android:id="@+id/actionBar_menu_button_layout"
                android:padding="16dp"
                android:layout_width="56dp"
                android:layout_height="56dp">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/header_menu"
                    android:id="@+id/menu_button"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/header_linear_layout"
                android:layout_marginLeft="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="6"
                android:layout_height="fill_parent">


                <ImageView
                    android:padding="8dp"
                    android:id="@+id/actionBar_pin_logo"
                    style="@style/tact_pin_logo_style"
                    android:src="@drawable/tact_logo"
                    android:layout_width="@dimen/standard_action_bar"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/actionBar_title_text"
                    android:textColor="@color/action_bar_orange"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/fragments_title_text"
                    android:text="Calendar"
                    android:fontFamily="sans-serif"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/search_box"
                android:layout_margin="6dp"
                android:orientation="horizontal"
                android:id="@+id/search_linear_layout"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <EditText
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:id="@+id/search_edit_text"
                    android:text="@string/contact_search_hint"
                    android:textColor="@color/dark_grey"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-light"
                    android:imeOptions="actionSearch"/>

                <ImageView
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/close_search_icon"
                    android:src="@drawable/cancel_search_icon"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/action_bar_secondary_button_2"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/imageview_secondary_2"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/action_bar_secondary_button_1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                
                <ImageView
                    android:id="@+id/imageview_secondary_1"
                    android:padding="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search_orange_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>


            <LinearLayout
                android:visibility="visible"
                android:padding="14dp"
                android:id="@+id/actionBar_option_button_layout"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="visible"
                    android:padding="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/option_menu_btn"
                    android:src="@drawable/header_settings"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>