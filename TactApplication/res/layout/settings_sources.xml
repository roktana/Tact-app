<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/items_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Sinc Data Now -->
        <RelativeLayout
            android:id="@+id/item_sync_data_now"
            style="@style/items_block_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/sync_data_now"
                android:layout_height="wrap_content"
                android:text="@string/sync_data_now"
                android:textColor="@color/dark_teal"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/last_synced_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_synced_at"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/button_text_color"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remote_sources"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="left"/>

    <LinearLayout
        style="@style/items_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <!-- Salesforce -->
        <RelativeLayout
            android:id="@+id/item_salesfoce"
            style="@style/items_block_item"
            android:clickable="true"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salesforce"/>

                <TextView
                    android:id="@+id/sf_account_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="salesforce@mail.com"
                    android:textSize="12sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/salesforce_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/green_tic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_line"/>

        <!-- Exchange -->
        <RelativeLayout
            android:id="@+id/item_exchange"
            style="@style/items_block_item"
            android:padding="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exchange"/>

                <TextView
                    android:id="@+id/exchange_account_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/connect_to_exchange"
                    android:textSize="12sp"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/exchange_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus_grey"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_line"/>

        <!-- Gmail -->
        <RelativeLayout
            android:id="@+id/item_gmail"
            style="@style/items_block_item"
            android:clickable="true"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gmail"/>

                <TextView
                    android:id="@+id/gmail_account_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/connect_gmail_title"
                    android:textSize="12sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/google_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus_grey"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_line"/>

        <!-- LinkedIn -->
        <RelativeLayout
            android:id="@+id/item_linkedin"
            style="@style/items_block_item"
            android:clickable="true"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkedin"/>

                <TextView
                    android:id="@+id/linkedin_account_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/connect_to_linkedin"
                    android:textSize="12sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/linkedin_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/warning"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_sources"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="left"/>

    <LinearLayout
        style="@style/items_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <!-- Contacts -->
        <RelativeLayout
            android:id="@+id/item_contacts"
            style="@style/items_block_item"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/contact_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/green_tic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_line"/>

        <!-- Calendar -->
        <RelativeLayout
            android:id="@+id/item_calendar"
            style="@style/items_block_item"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendar"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/calendar_synced"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/green_tic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Divider -->
        <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider_line"/>

        <!-- Tasks -->
        <RelativeLayout
            android:id="@+id/item_tasks"
            style="@style/items_block_item"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/warning"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>