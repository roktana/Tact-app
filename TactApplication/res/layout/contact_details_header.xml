<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/avatar_container"
        android:background="@color/clear_blue_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_action_bar_5x">

        <LinearLayout
            android:layout_marginTop="@dimen/standard_action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="23dp"
                android:paddingLeft="@dimen/standart_element_width"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.tactile.tact.views.ProfileIconView
                    android:id="@+id/contact_details_header_icon"
                    app:iconSize="large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/contact_details_header_name"
                    android:fontFamily="sans-serif-light"
                    android:textSize="@dimen/big_title"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="16dp"
                    android:text="Contact Name"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>