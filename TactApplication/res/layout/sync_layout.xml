<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:id="@+id/syncing_linear_layout"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@color/action_bar_grey">

        <LinearLayout
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/intro_tact_logo"
                android:layout_width="150dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textSize="@dimen/text_contact_meeting_title"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/light_gray"
                android:text="@string/syncing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="16dp"
                android:src="@drawable/syncing_icon"
                android:layout_width="100dp"
                android:layout_height="130dp" />

            <TextView
                android:gravity="center"
                android:textColor="@color/light_gray"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/text_contact_meeting_title"
                android:text="@string/feel_free_close_tact"
                android:layout_width="350dp"
                android:layout_height="wrap_content" />

            </LinearLayout>

        <LinearLayout
            android:paddingTop="0dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/notify_later_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <TextView
                    android:textSize="@dimen/fragment_subtitle_text"
                    android:layout_gravity="center_vertical"
                    android:text="@string/notify_finished"
                    android:textColor="@color/light_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

    </LinearLayout>

</FrameLayout>