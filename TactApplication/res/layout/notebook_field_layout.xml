<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="@dimen/padding_standard"
            android:paddingBottom="@dimen/padding_standard"
            android:focusableInTouchMode="false"
            android:id="@+id/settings_salesforce_field"
            style="@style/notebook_layout_field"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="2dp"
                    android:id="@+id/salesforce_title"
                    android:textSize="@dimen/xl_text_size"
                    android:textColor="@color/dark_grey"
                    android:text="@string/salesforce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/note_contact"
                    android:textColor="@color/mid_grey"
                    style="@style/log_edit_text_item"
                    android:text="@string/placeholder_contact"/>

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/note_date"
                    android:textColor="@color/mid_grey"
                    style="@style/log_edit_text_item"
                    android:text="@string/placeholder_notebook_date"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/note_icon"
                android:src="@drawable/logdetail_log"
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>
        <include layout="@layout/divider_layout"/>
    </LinearLayout>
    
</LinearLayout>