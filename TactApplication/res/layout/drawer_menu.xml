<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:id="@+id/menu_linear_layout"
    android:background="@color/white"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/userContent"
        android:background="@drawable/menu_pattern_2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:paddingTop="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/tact_logo"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="TACT"
                    android:gravity="center_vertical"
                    android:layout_weight="6.5"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/app_username"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="oberyn.martell@gmail.com"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/drawer_clickable_item"
            android:id="@+id/drawer_email_field"
            android:weightSum="8"
            android:layout_height="0dp">

            <ImageView
                
                style="@style/drawer_icons"
                android:src="@drawable/mail_icon_2"/>

            <TextView
                android:layout_weight="7"
                style="@style/drawer_list_item"
                android:id="@android:id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/drawer_mail_coming" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/drawer_calendar_field"
            style="@style/drawer_clickable_item"
            android:weightSum="8"
            android:layout_height="0dp">

            <ImageView
                android:layout_height="27dp"
                android:src="@drawable/calendar_icon_2"
                style="@style/drawer_icons"/>

            <TextView
                style="@style/drawer_list_item"
                android:layout_weight="7"
                android:id="@android:id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/drawer_calendar"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/drawer_clickable_item"
            android:id="@+id/drawer_contacts_field"
            android:weightSum="8"
            android:layout_weight="1.3"
            android:layout_height="0dp">

            <ImageView
                style="@style/drawer_icons"
                android:src="@drawable/contacts_icon_2"/>

            <TextView
                style="@style/drawer_list_item"
                android:layout_weight="7"
                android:id="@android:id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/drawer_contacts"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/drawer_clickable_item"
            android:id="@+id/drawer_notebook_field"
            android:weightSum="8"
            android:layout_weight="1.3"
            android:layout_height="0dp">

            <ImageView
                
                android:layout_height="25dp"
                android:src="@drawable/notebook_icon_2"
                style="@style/drawer_icons"/>

            <TextView
                style="@style/drawer_list_item"
                android:layout_weight="7"
                android:id="@android:id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/drawer_notebook_coming"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/drawer_clickable_item"
            android:id="@+id/drawer_opportunities_field"
            android:weightSum="8"
            android:layout_weight="1.3"
            android:layout_height="0dp">

            <ImageView
                android:layout_height="25dp"
                android:src="@drawable/opportunities_icon_2"
                style="@style/drawer_icons"/>

            <TextView
                style="@style/drawer_list_item"
                android:layout_weight="71"
                android:id="@android:id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/drawer_opportunities_coming"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>